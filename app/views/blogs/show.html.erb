<div class="card m-5 text-center">
  <div class="card-header">
    <%= @blog.start_time.strftime("%m月%d日") %>の予定
  </div>

  <div class="crd-body">
    <p id="notice"><%= notice %></p>
    
    <p>
      <strong>タイトル:</strong>
      <%= @blog.title %>
    </p>

    <p>
      <strong>内容:</strong>
      <%= safe_join(@blog.content.split("\n"),tag(:br)) %>
    </p>
  </div>

  <div class="card-footer">
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#editModal">編集</button>
    <div class="btn btn-danger"><%= link_to '消去',blog_path(@blog.id), method: :delete, data: { confirm: '本当に?' }, class: "text-light" %></div>
    <div class="btn btn-light"><%= link_to '戻る', root_path %></div>
  </div>
</div>

<!--madal form-->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">予定追加</h4></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          		  <span aria-hidden="true">×</span>
          		  </button>
            </div>
            <div class="modal-body">
                <%= render 'blogs/new', blog: @blog %>
            </div>
        </div>
    </div>
</div>