<div class="toppage">
  <h1 class="top text-center mt-2">カレンダー</h1>
  <br>
  
  <div class="row mb-3 mx-3">
      <div class="col-1">
          <button type="button" class="btn btn-primary mb-12" data-toggle="modal" data-target="#indexModal">予定一覧</button>
      </div>
      <div class="col-2">
          <button type="button" class="btn btn-primary mb-12" data-toggle="modal" data-target="#newModal"><i class="far fa-plus-square"></i></button>
      </div>
  </div>
  <div class="row mx-2">
    <div class="col-md-12">
      <%= month_calendar events: @blogs do |date, blogs| %>
      
          <%= date.day %>
          
          <% blogs.each do |blog| %>
              <div>
                  <%= link_to blog.title, blog %>
              </div>
          <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">予定追加</h4></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          		  <span aria-hidden="true">×</span>
          		  </button>
            </div>
            <div class="modal-body">
                <%= form_with(model: @blog, local: true) do |form| %>

                  <div class="title">
                    <div class="form-tag">タイトル</div>
                    <%= form.text_field :title %>
                  </div>
                  
                  <div class="content">
                    <div class="form-tag">内容</div>
                    <%= form.text_field :content %>
                  </div>
                  
                  <div class="title">
                    <div class="form-tag">時間</div>
                    <%= form.datetime_select :start_time %>
                  </div>
                  
                  <div class="submit text-right">
                    <%= form.submit %>
                  </div>
                  
                <% end %>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="indexModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">予定一覧</h4></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          		  <span aria-hidden="true">×</span>
          		  </button>
            </div>
            <div class="modal-body">
                <div class="row">
                  <div class="col">
                    
                    <table class="table">
                      <thead class="thead-light">
                        <tr>
                          <th>タイトル</th>
                          <th>日程</th>
                        </tr>
                      </thead>
                      
                      <tbody>
                        <% @blogs.each do |blog| %>
                          <tr>
                            <td><%= link_to blog.title , blog %></td>
                            <td><%= blog.start_time.strftime("%m-%d") %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>