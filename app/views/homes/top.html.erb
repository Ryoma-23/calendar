<div class="toppage">
  <h1 class="top">カレンダー</h1>
  <br>
  
  <div class="row">
    <div class="col-md-4">
      
      <%= link_to new_blog_path do %>
        <i class="far fa-plus-square"></i>
      <% end %>
      <%= link_to "一覧", blogs_path %>
      
    </div>
    
    <div class="col-md-8">
      <%= month_calendar events: @blogs do |date, blogs| %>
      
          <%= date.day %>
          
          <% blogs.each do |blog| %>
              <div>
                  <%= link_to blog.title, blog %>
              </div>
          <% end %>
      <% end %>
    </div>
  </div>
</div>